<div class="au-o-box">
  <AuLabel for="gemeente">Zoek erfgoed op naam</AuLabel>
  <AuInput id="gemeente" {{on "input" this.onNameInputChange}} />
  <AuLabel for="straatnaam">Zoek op straatnaam</AuLabel>
  <AuInput id="straatnaam" {{on "input" this.onStraatChange}} />
</div>
<div class="au-o-box">
  {{#each this.aanduidingsobjecten as |aanduidingsobject|}}
    <AuCard as |c|>
      <c.header>
        <AuHeading @level="2" @skin="4">
          {{aanduidingsobject.naam}}
        </AuHeading>
      </c.header>
      <c.content>
        <p>{{aanduidingsobject.locatie_samenvatting}}</p>
      </c.content>
    </AuCard>
    <br />
  {{/each}}
</div>